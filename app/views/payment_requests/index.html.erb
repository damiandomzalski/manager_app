<h2>Submitted payment requests</h2>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_requests.each do |payment_request| %>
    <tr>
      <td><%= payment_request.amount %></td>
      <td><%= payment_request.currency %></td>
      <td><%= payment_request.description %></td>
      <td><%= payment_request.status %></td>
      <td>
        <% if payment_request.pending? %>
          <%= link_to 'Accept', payment_request_accept_payment_request_path(payment_request), method: :post, data: { confirm: 'Are you sure to accept that payment request?' } %>
          <%= link_to 'Reject', payment_request_reject_payment_request_path(payment_request), method: :post, data: { confirm: 'Are you sure to reject that payment request?' } %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
